#!/bin/sh

DBPORT=12345

DIR=`dirname $0`
JSBB_SERVER_HOME=$DIR/..
JSBB_DATADIR=$JSBB_SERVER_HOME/data
JSBB_LOGDIR=$JSBB_SERVER_HOME/logs

if [ ! -e $JSBB_DATADIR ]; then
  mkdir $JSBB_DATADIR
fi

if [ ! -e $JSBB_LOGDIR ]; then
  mkdir $JSBB_LOGDIR
fi

nohup mongod \
    --port $DBPORT \
    --dbpath $JSBB_DATADIR \
    1>> $JSBB_LOGDIR/db-out.log \
    2>> $JSBB_LOGDIR/db-err.log &
